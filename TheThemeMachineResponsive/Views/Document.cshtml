@using Orchard.Mvc.Html;
@{
    var title = @WorkContext.CurrentSite.SiteName;
    SetMeta("X-UA-Compatible", "IE=edge,chrome=1");
    SetMeta("viewport", "width=device-width, initial-scale=1.0");
    SetMeta("HandheldFriendly", "True"); /* Older Palm/Blackberry models and browsers like AvantGo */
    SetMeta("MobileOptimized", "320"); /* Microsoft Pocket PC */
    /* IOS web apps full screen mode (hides address bar and component bar at top and bottom of browser) and styling of top bar in browser.
    SetMeta("apple-mobile-web-app-capable", "yes");
    SetMeta("apple-mobile-web-app-status-bar-style", "black-translucent");
    */
    Style.Include("http://fonts.googleapis.com/css?family=Lobster&subset=latin");
    Style.Include("Site.css");
    Script.Include("Respond.min.js"); /* For Responsive Layouts before IE9 */
    Script.Include("http://code.jquery.com/jquery.min.js");
    Script.Include("ResponsiveChanges.js"); /* For responsive navigation/layout changes in mobile/tablet layouts. Requires jQuery */
}
<!DOCTYPE html> 
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head> 
    <meta charset="utf-8" /> 
    <meta http-equiv="cleartype" content="on" /> <!-- Mobile IE font smoothing -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../Images/Touch/apple-touch-icon-144x144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../Images/Touch/apple-touch-icon-114x114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../Images/Touch/apple-touch-icon-72x72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="../Images/Touch/apple-touch-icon-57x57-precomposed.png" />
    <link rel="shortcut icon" href="../Images/Touch/apple-touch-icon.png" />
    <title>@title</title>
     @Display(Model.Head)
    <!--[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>
</head> 
<body class="@Html.ClassForPage()"> 
@Display(Model.Body)
@Display(Model.Tail)
</body>
</html>